<!DOCTYPE html>
<html>
  <head>
    <title>WebCampBackendNew</title>
  </head>

  <body>

  <div class='container'>
  	

    <div class='row'>
      <div class='col-md-6 col-md-offset-3'>

      	<h1>Editing Book</h1>

        <% if @book.errors.any? %>
          <h4>Input error:</h4>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>

      	<%= form_for(@book) do |f| %>

          <div class="field row">
          <h4>Title</h4>
      		<%= f.text_field :title %>
          </div>

          <div class="field row">
          <h4>Body</h4>
      		<%= f.text_area :body %>
          </div>

          <div class="actions row">
      		<%= f.submit 'Update Book' %>
          </div>

      	<% end %>

      </div>
    </div>
  
    <div class="actions row">
      <div class='col-md-6 col-md-offset-3'>
    	<%=link_to "Show", book_path %>
    	<%=link_to "Back", books_path %>
      </div>
    </div>

  </div>

  </body>

  <footer>
    <div class='container'>
      <div class='row'>
        <div class='col-xs-3 col-xs-offset-9'>
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
  </footer>

</html>