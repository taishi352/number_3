
<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
  </head>

  <body>

<div class='body'>
<div class='container'>

    <% if flash[:notice] %>
      <p><%= flash[:notice] %></p>
    <% end %>

  <div class='row'>
  
  <div class='col-xs-3'>
    <h2>User info</h2>
    <table class='table'>
      <tr><%= attachment_image_tag @book.user, :profile_image, format: 'jpeg',fallback: "no_image.jpg", size: "100x100" %></tr> 
      <tr>
        <th>name</th>
        <th><%= @book.user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @book.user.introduction %></th>
      </tr>
    </table>
    
    <div class='row'>
      <% if @book.user.id == current_user.id %>
        <p><%= link_to "", edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %></p>
      <% else %>
        <p><%= link_to "", user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %></p>
      <% end %>
    </div>

    <h2>New book</h2>
    
    <%= form_for(@book) do |f| %>
      
      <h4>Title</h4>
      <%= f.text_field :title %>

      <h4>Body</h4>
      <%= f.text_area :body %>

      <%= f.submit 'Create Book' %>

    <% end %>

  </div>

    <div class='col-xs-9'>
      <h2>Book Detail</h2>

      <table class='table table-hover table-inverse'>
        <thead>
          <tr> 
            <th></th>
            <th>title</th>
            <th>opinion</th>
            <th></th>
          </tr>
        </thead>


        <tbody>
            <tr>
              <td><%= attachment_image_tag @book.user, :profile_image, format: 'jpeg',fallback: "no_image.jpg", size: "60x60" %>
                <br><%= link_to "#{@book.user.name}", user_path(@book.user.id) %>
              </td>
              <td><%= @book.title %></td>
              <td><%= @book.body %></td>
              <% if @book.user.id == current_user.id %>
                <td><%=link_to "Edit",edit_book_path(@book.id) %></td>
                <td><%= link_to "Destroy", book_path, method: :delete %>
              <% end %>
            </tr>
            <tr>
              <td></td>
              <td></td>
              <td></td>
            </tr>
        </tbody>

      </table>
    </div>
  </div>
</div>
</div>

    <footer>
  <div class='container'>
    <div class='row'>
      <div class='col-xs-3 col-xs-offset-9'>
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>


  </body>
</html>
